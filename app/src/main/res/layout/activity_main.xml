<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/team_a_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/team_a"
            android:textColor="#616161"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/team_b_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/team_b"
            android:textColor="#616161"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/add_0_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:onClick="addA"
                android:tag="0"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_1_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:layout_toEndOf="@id/add_0_to_a"
                android:onClick="addA"
                android:tag="1"
                android:text="+1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_2_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_0_to_a"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                android:onClick="addA"
                android:tag="2"
                android:text="+2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_3_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_1_to_a"
                android:layout_margin="6dp"
                android:layout_toEndOf="@id/add_2_to_a"
                android:onClick="addA"
                android:tag="3"
                android:text="+3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_4_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_2_to_a"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                android:onClick="addA"
                android:tag="4"
                android:text="+4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_5_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_2_to_a"
                android:layout_margin="6dp"
                android:layout_toEndOf="@id/add_4_to_a"
                android:onClick="addA"
                android:tag="5"
                android:text="+5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_6_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_4_to_a"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                android:onClick="addA"
                android:tag="6"
                android:text="+6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_8_to_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_4_to_a"
                android:layout_margin="6dp"
                android:layout_toEndOf="@id/add_6_to_a"
                android:onClick="addA"
                android:tag="8"
                android:text="+8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/undo_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="6dp"
                android:onClick="undoA"
                android:text="Undo"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#FF0000"
                android:textSize="130sp" />

            <TextView
                android:id="@+id/team_a_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/team_a_total"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="22sp" />

            <TextView
                android:id="@+id/team_a_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="40sp" />

            <TextView
                android:id="@+id/a_throws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="22sp" />

        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="#0000FF"
                android:textSize="130sp" />

            <TextView
                android:id="@+id/team_b_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/team_b_total"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="22sp" />

            <TextView
                android:id="@+id/team_b_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="40sp" />


            <TextView
                android:id="@+id/b_throws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="22sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/problem_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/add_0_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/add_1_to_b"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="0"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_1_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="1"
                android:text="+1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_2_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_0_to_b"
                android:layout_toStartOf="@id/add_3_to_b"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="2"
                android:text="+2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_3_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_1_to_b"
                android:layout_alignParentEnd="true"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="3"
                android:text="+3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_4_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_2_to_b"
                android:layout_toStartOf="@id/add_5_to_b"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="4"
                android:text="+4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_5_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_2_to_b"
                android:layout_alignParentEnd="true"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="5"
                android:text="+5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_6_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_4_to_b"
                android:layout_toStartOf="@id/add_8_to_b"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="6"
                android:text="+6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_8_to_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_4_to_b"
                android:layout_alignParentEnd="true"
                android:layout_margin="6dp"
                android:onClick="addB"
                android:tag="8"
                android:text="+8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/undo_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="6dp"
                android:onClick="undoB"
                android:text="Undo"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetScores"
            android:text="@string/reset_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextGame"
            android:text="Next Game" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchSides"
            android:text="Switch Sides" />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextMatch"
            android:text="Next Match"
            />

    </LinearLayout>

</LinearLayout>
